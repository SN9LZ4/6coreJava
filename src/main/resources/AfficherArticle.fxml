<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Tooltip?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="Controller.AfficherArticle"
            style="-fx-background-color: #f8faff;" stylesheets="@/styles/stats.css">
    <children>

        <!-- Decorative Background Circles -->
        <Pane mouseTransparent="true">
            <children>
                <Circle centerX="100" centerY="200" radius="120" fill="rgba(100,149,237,0.08)" />
                <Circle centerX="850" centerY="300" radius="180" fill="rgba(100,149,237,0.12)" />
            </children>
        </Pane>

        <!-- Main ScrollPane to enable scrolling for the entire page -->
        <ScrollPane fitToWidth="true" AnchorPane.topAnchor="0.0" AnchorPane.leftAnchor="0.0" 
                    AnchorPane.rightAnchor="0.0" AnchorPane.bottomAnchor="0.0" 
                    style="-fx-background-color: transparent; -fx-padding: 0;">
            <content>
                <HBox spacing="0" style="-fx-background-color: transparent;">
                    <children>

                        <!-- Sidebar -->
                        <VBox spacing="20" style="-fx-background-color: white; -fx-pref-width: 250px; -fx-padding: 30px 20px;">
                            <children>
                                <ImageView fitWidth="140" fitHeight="120">
                                    <image>
                                        <Image url="images/logo.png" />
                                    </image>
                                </ImageView>

                                <VBox spacing="12">
                                    <children>
                                        <Button text="Dashboard"
                                                style="-fx-background-color: transparent; -fx-text-fill: black; -fx-font-weight: bold; -fx-font-size: 16px;" />
                                        <Button text="Articles"
                                                style="-fx-background-color: #e3efff; -fx-text-fill: #1a73e8; -fx-font-weight: bold; -fx-font-size: 16px; -fx-background-radius: 10;" />
                                        <Button text="Utilisateurs"
                                                style="-fx-background-color: transparent; -fx-text-fill: black; -fx-font-weight: bold; -fx-font-size: 16px;" />
                                        <Button text="RÃ©clamations"
                                                style="-fx-background-color: transparent; -fx-text-fill: black; -fx-font-weight: bold; -fx-font-size: 16px;" />
                                        <Button text="Finance"
                                                style="-fx-background-color: transparent; -fx-text-fill: black; -fx-font-weight: bold; -fx-font-size: 16px;" />
                                        <Button text="BÃ©nÃ©volat"
                                                style="-fx-background-color: transparent; -fx-text-fill: black; -fx-font-weight: bold; -fx-font-size: 16px;" />
                                        <Button text="Projections"
                                                style="-fx-background-color: transparent; -fx-text-fill: black; -fx-font-weight: bold; -fx-font-size: 16px;" />
                                    </children>
                                </VBox>

                                <Region VBox.vgrow="ALWAYS" />

                                <Button text="LOGOUT" style="-fx-background-color: linear-gradient(to right, #6495ED, #4169E1); -fx-background-radius: 30; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;">
                                    <graphic>
                                        <StackPane>
                                            <children>
                                                <Circle radius="12" fill="white" stroke="#6495ED" strokeWidth="2" />
                                                <Label text="ðŸ”“" style="-fx-text-fill: #6495ED; -fx-font-size: 16px; -fx-font-weight: bold;" />
                                            </children>
                                        </StackPane>
                                    </graphic>
                                </Button>
                            </children>
                        </VBox>

                        <!-- Main Content -->
                        <VBox spacing="25" style="-fx-padding: 40px 50px;" alignment="TOP_CENTER" VBox.vgrow="ALWAYS">
                            <children>
                                <HBox spacing="20" alignment="CENTER_LEFT">
                                    <children>
                                        <ImageView fitHeight="32" fitWidth="32">
                                            <image>
                                                <Image url="images/blog.png" />
                                            </image>
                                        </ImageView>
                                        <Label text="Liste des Articles"
                                               style="-fx-font-size: 28px; -fx-text-fill: #1a73e8; -fx-font-weight: bold;" />
                                        <Region HBox.hgrow="ALWAYS" />
                                        <Button fx:id="exportStatsPdfButton" onAction="#exportAllArticlesStatsToPdf" 
                                                style="-fx-background-color: transparent; -fx-padding: 0;">
                                            <graphic>
                                                <ImageView fitHeight="30" fitWidth="30">
                                                    <image>
                                                        <Image url="images/pdf.png" />
                                                    </image>
                                                </ImageView>
                                            </graphic>
                                            <tooltip>
                                                <Tooltip text="Exporter les statistiques en PDF" />
                                            </tooltip>
                                        </Button>
                                        <Button fx:id="btnAjouterArticle" onAction="#ouvrirAjouterArticle" style="-fx-background-color: transparent; -fx-padding: 0;">
                                            <graphic>
                                                <ImageView fitHeight="30" fitWidth="30">
                                                    <image>
                                                        <Image url="images/add.png" />
                                                    </image>
                                                </ImageView>
                                            </graphic>
                                        </Button>
                                    </children>
                                </HBox>

                                <!-- Statistics Cards -->
                                <HBox spacing="20" alignment="CENTER">
                                    <VBox styleClass="stat-card" spacing="10" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 3);">
                                        <Label text="Moyenne des Notes" style="-fx-font-size: 16px; -fx-text-fill: #6B7280;"/>
                                        <Label fx:id="avgRatingLabel" text="4.5" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #F5A623;"/>
                                        <Label fx:id="totalRatingsLabel" text="Total: 150 notes" style="-fx-text-fill: #6B7280;"/>
                                    </VBox>

                                    <VBox styleClass="stat-card" spacing="10" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 3);">
                                        <Label text="RÃ©actions" style="-fx-font-size: 16px; -fx-text-fill: #6B7280;"/>
                                        <HBox spacing="20" alignment="CENTER">
                                            <VBox alignment="CENTER">
                                                <Label fx:id="totalLikesLabel" text="1.2K" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #4CAF50;"/>
                                                <Label text="J'aime" style="-fx-text-fill: #6B7280;"/>
                                            </VBox>
                                            <VBox alignment="CENTER">
                                                <Label fx:id="totalDislikesLabel" text="234" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #F44336;"/>
                                                <Label text="Je n'aime pas" style="-fx-text-fill: #6B7280;"/>
                                            </VBox>
                                        </HBox>
                                    </VBox>
                                </HBox>

                                <!-- Charts Section -->
                                <HBox spacing="20" alignment="CENTER">
                                    <!-- Rating Distribution Chart -->
                                    <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 3);">
                                        <Label text="Distribution des Notes" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2E3A59;"/>
                                        <BarChart fx:id="ratingDistributionChart" legendVisible="false" prefHeight="200" prefWidth="300">
                                            <xAxis>
                                                <CategoryAxis label="Note" />
                                            </xAxis>
                                            <yAxis>
                                                <NumberAxis label="Nombre" />
                                            </yAxis>
                                        </BarChart>
                                    </VBox>

                                    <!-- Likes vs Dislikes Chart -->
                                    <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 3);">
                                        <Label text="RÃ©partition des RÃ©actions" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2E3A59;"/>
                                        <PieChart fx:id="reactionsPieChart" prefHeight="200" prefWidth="300" />
                                    </VBox>
                                </HBox>

                                <!-- Article Card Container -->
                                <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;" VBox.vgrow="ALWAYS">
                                    <content>
                                        <VBox fx:id="articleCardContainer" spacing="20" style="-fx-padding: 10;">
                                            <!-- Cards generated dynamically -->
                                        </VBox>
                                    </content>
                                </ScrollPane>
                            </children>
                        </VBox>

                    </children>
                </HBox>
            </content>
        </ScrollPane>

    </children>
</AnchorPane>
